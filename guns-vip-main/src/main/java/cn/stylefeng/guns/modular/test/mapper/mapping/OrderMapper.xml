<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.stylefeng.guns.modular.test.mapper.OrderMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.stylefeng.guns.modular.test.entity.Order">
        <id column="id" property="id" />
        <result column="goods_name" property="goodsName" />
        <result column="place" property="place" />
        <result column="create_time" property="createTime" />
        <result column="user_name" property="userName" />
        <result column="user_phone" property="userPhone" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id AS "id", goods_name AS "goodsName", place AS "place", create_time AS "createTime", user_name AS "userName", user_phone AS "userPhone"
    </sql>


    <select id="customList" resultType="cn.stylefeng.guns.modular.test.model.result.OrderResult" parameterType="cn.stylefeng.guns.modular.test.model.params.OrderParam">
        select
        <include refid="Base_Column_List"/>
        from biz_order where 1 = 1
            <if test="paramCondition.id != null and paramCondition.id != ''">
                and id like CONCAT('%',#{paramCondition.id},'%')
            </if>
            <if test="paramCondition.goodsName != null and paramCondition.goodsName != ''">
                and goodsName like CONCAT('%',#{paramCondition.goodsName},'%')
            </if>
    </select>

    <select id="customPageList" resultType="cn.stylefeng.guns.modular.test.model.result.OrderResult" parameterType="cn.stylefeng.guns.modular.test.model.params.OrderParam">
        select
        <include refid="Base_Column_List"/>
        from biz_order where 1 = 1
        <if test="paramCondition.id != null and paramCondition.id != ''">
            and id like CONCAT('%',#{paramCondition.id},'%')
        </if>
        <if test="paramCondition.goodsName != null and paramCondition.goodsName != ''">
            and goods_Name like CONCAT('%',#{paramCondition.goodsName},'%')
        </if>
    </select>

</mapper>
